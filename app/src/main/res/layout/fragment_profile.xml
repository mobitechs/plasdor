<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--        <LinearLayout-->
            <!--            android:background="@color/refreshProgress1"-->
            <!--            android:orientation="vertical"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_weight="2"-->
            <!--            android:layout_height="0dp">-->
            <!--        </LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="7"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/mainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_man"
                            card_view:civ_border_color="@color/blue"
                            card_view:civ_border_width="@dimen/_1sdp" />

                        <ImageView
                            android:id="@+id/imgCamera"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_man" />
                    </RelativeLayout>

                    <LinearLayout
                        android:paddingVertical="@dimen/_12sdp"
                        android:background="@drawable/bg_rect_stroke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:visibility="gone"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_baseline_email_24" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvEmail"
                            android:textSize="@dimen/_14sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="user@gmail.com" />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/bg_rect_stroke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:visibility="gone"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_man" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/tvName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Your Name"
                            android:inputType="text"
                            android:textColor="@color/black"
                             />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/bg_rect_stroke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:visibility="gone"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_baseline_local_phone_24" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/tvMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Your Mobile"
                            android:inputType="phone"
                            android:singleLine="true"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/bg_rect_stroke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:visibility="gone"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_baseline_location_on_24" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/txtAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Enter Your Address"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/bg_rect_stroke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:visibility="gone"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_baseline_location_city_24" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/txtCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Your City"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/bg_rect_stroke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:visibility="gone"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_baseline_pin_24" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/txtPinCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Your PinCode"
                            android:inputType="phone"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_130sdp"
                            android:layout_weight="5">

                            <TextView
                                android:id="@+id/txtAdharCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                android:text="Adhar Card" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/imgAdhar"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_130sdp"
                                android:layout_below="@+id/txtAdharCard"
                                android:layout_marginEnd="@dimen/_10sdp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_130sdp"
                            android:layout_weight="5">

                            <TextView
                                android:id="@+id/txtElectricityBill"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                android:text="Electricity Bill" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/imgElectricityBill"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_130sdp"
                                android:layout_below="@+id/txtElectricityBill"
                                android:layout_marginStart="@dimen/_10sdp" />
                        </RelativeLayout>


                    </LinearLayout>


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:background="@drawable/bg_solid"
                    android:text="Update"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <include layout="@layout/loader"></include>
</RelativeLayout>